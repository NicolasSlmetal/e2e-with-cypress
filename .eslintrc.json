{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "cypress/globals": true
    },
    "extends": ["eslint:recommended", "plugin:cypress/recommended"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    
    "rules": {
        "no-undef": "off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-trailing-spaces": [
            "error"
        ]
    },
    "plugins": [
        "cypress"]
}   